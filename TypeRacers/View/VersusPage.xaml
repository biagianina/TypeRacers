<Page x:Name="PageVersus"
      x:Class="TypeRacers.View.VersusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:TypeRacers.View"
      xmlns:vm="clr-namespace:TypeRacers.ViewModel"
      MinHeight="450"
      MinWidth="450"
      Title="Versus"
      Style="{StaticResource AppStyle}">

    <Page.Resources>
        <vm:VersusViewModel x:Key="VersusVM" />
        <BooleanToVisibilityConverter x:Key="VisibleConverter" />
    </Page.Resources>

    <Grid DataContext="{StaticResource VersusVM}">
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1"
              VerticalAlignment="Center"
              Width="auto"
              Height="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Grid.Column="0"
                    Name="Back"
                    Click="BackBtn_Click"
                    Command="{Binding RemovePlayer}"
                    Margin="10 5"
                    Width="70"
                    Height="30"
                    HorizontalAlignment="Left"
                    Style="{StaticResource RoundButtonTemplate}"
                    Background="#FF591F74"
                    Content="Back"
                    BorderBrush="#FFAE00FF"
                    BorderThickness="5" />
            <StackPanel Grid.Row="1"
                        Grid.ColumnSpan="3"
                        VerticalAlignment="Center">

                <local:CarAndProgressUserControl CAPUCProgress="{Binding WPMProgress, UpdateSourceTrigger=PropertyChanged}"
                                                 CAPUCName="You"
                                                 CAPUCAccuracy="{Binding Accuracy, UpdateSourceTrigger=PropertyChanged}"
                                                 CAPUCShowFinishResults="{Binding OpenFinishPopup, UpdateSourceTrigger=PropertyChanged}"
                                                 CAPUCShowRanking="{Binding ShowRanking}"
                                                 CAPUCRanking="{Binding RankingPlace}"
                                                 CAPUCSliderProgress="{Binding SliderProgress, UpdateSourceTrigger=PropertyChanged}"
                                                 CAPUCSliderStyle="{StaticResource GreenSliderStyle}"/>

                <local:CarAndProgressUserControl CAPUCCanBeShown="{Binding ShowFirstOpponent}"                                                 
                                                 CAPUCName="{Binding OpponentsAndRanking[0].Item1, UpdateSourceTrigger=PropertyChanged}"
                                                 CAPUCProgress="{Binding OpponentsAndRanking[0].Item2.Item1, UpdateSourceTrigger=PropertyChanged}"
                                                 CAPUCSliderProgress="{Binding OpponentsAndRanking[0].Item2.Item2, UpdateSourceTrigger=PropertyChanged}"
                                                 CAPUCShowRanking="{Binding OpponentsAndRanking[0].Item2.Item3, UpdateSourceTrigger=PropertyChanged}"
                                                 CAPUCRanking="{Binding OpponentsAndRanking[0].Item2.Item4, UpdateSourceTrigger=PropertyChanged}"
                                                 CAPUCSliderStyle="{StaticResource YellowSliderStyle}" />

                <local:CarAndProgressUserControl CAPUCCanBeShown="{Binding ShowSecondOpponent}"
                                                 CAPUCName="{Binding OpponentsAndRanking[1].Item1, UpdateSourceTrigger=PropertyChanged}"
                                                 CAPUCProgress="{Binding OpponentsAndRanking[1].Item2.Item1, UpdateSourceTrigger=PropertyChanged}"
                                                 CAPUCSliderProgress="{Binding OpponentsAndRanking[1].Item2.Item2, UpdateSourceTrigger=PropertyChanged}"
                                                 CAPUCShowRanking="{Binding OpponentsAndRanking[1].Item2.Item3, UpdateSourceTrigger=PropertyChanged}"
                                                 CAPUCRanking="{Binding OpponentsAndRanking[1].Item2.Item4, UpdateSourceTrigger=PropertyChanged}"
                                                 CAPUCSliderStyle="{StaticResource PinkSliderStyle}"
                                                 />

            </StackPanel>
        </Grid>
        <Grid Grid.Row="2"
              VerticalAlignment="Center">
            <local:ReadAndTypeUserControl x:Name="UserCTRL"
                                          Width="auto"
                                          Height="auto"
                                          Margin="20"
                                          RATUCSearchingForOpponents="{Binding EnableSearchingAnimation}"
                                          RATUCStartingTime="{Binding StartTime, UpdateSourceTrigger=PropertyChanged}"
                                          RATUCInlines="{Binding TextToTypeStyles}"
                                          RATUCSecondsToStart="{Binding SecondsToGetReady, UpdateSourceTrigger=PropertyChanged}"
                                          RATUCSecondsInGame="90 seconds left"
                                          RATUCCanType="{Binding CanUserType}"
                                          RATUCGetReadyAlert="{Binding EnableGetReadyAlert}"
                                          RATUCAllTextTyped="{Binding AllTextTyped}"
                                          RATUCCurrentInputText="{Binding CurrentInputText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                          RATUCBackgroundColor="{Binding InputBackgroundColor, UpdateSourceTrigger=PropertyChanged}"
                                          RATUCTypingAlert="{Binding TypingAlert, UpdateSourceTrigger=PropertyChanged}"
                                          >
            </local:ReadAndTypeUserControl>
        </Grid>
        <StackPanel Grid.Row="1"
                    Visibility="{Binding EnableSearchingAnimation, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibleConverter}}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
        <Image Source="pack://application:,,,/TypeRacers;component/Images/loading.png"
               Width="100"
               Height="100"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               RenderTransformOrigin="0.5, 0.5">
            <Image.RenderTransform>
                <RotateTransform x:Name="noFreeze" />
            </Image.RenderTransform>
            <Image.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Image.RenderTransform).(RotateTransform.Angle)"
                                             To="360"
                                             Duration="0:0:1"
                                             RepeatBehavior="Forever" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>
            <Label Content="Searching for opponents"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontFamily="Times New Roman"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="#FF001263" />
        </StackPanel>
        <Popup Name="TimerReadyPopup"
               IsOpen="{Binding EnableRestartOrExitAlert}"
               Placement="Center"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               AllowsTransparency="True"
               Width="200"
               Height="200">

            <Border BorderThickness="4"
                    BorderBrush="#7ac5cd"
                    CornerRadius="7"
                    Padding="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                <StackPanel Background="White">
                    <TextBlock Margin="0,50,0,60"
                               FontFamily="Arial"
                               Opacity="0.9"
                               FontSize="15"
                               Foreground="#bbcedd"
                               Background="White"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Text="No opponents found" />

                    <StackPanel HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <Button Background="Red"
                                Foreground="White"
                                Width="100"
                                Height="70"
                                Content="TRY AGAIN"
                                Command="{Binding RestartSearchingOpponentsCommand}" />
                        <Button Background="#7ac5cd"
                                Foreground="White"
                                Width="100"
                                Height="70"
                                Content="EXIT"
                                Command="{Binding ExitProgramCommand}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>

</Page>
