<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- styles for the slider(car) -->
    <Style
        x:Key="YellowSliderThumbStyle"
        TargetType="Thumb">
        <Style.Setters>
            <Setter
                Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <StackPanel
                            Width="auto"
                            Height="65"
                            Background="#00000000"
                            Orientation="Horizontal">
                            <Image
                                Width="80"
                                Height="80"
                                Margin="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="pack://application:,,,/TypeRacers;component/Images/yellow.png">
                            </Image>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

