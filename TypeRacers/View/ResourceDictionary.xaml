    <Style
        TargetType="Slider"
        x:Key="YellowSliderStyle">
        <Setter
            Property="OverridesDefaultStyle"
            Value="true" />
        <Setter
            Property="Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="Slider">
                    <Grid>
                        <Border
                            Name="PART_Border"
                            BorderBrush="Black"
                            BorderThickness="1"
                            Padding="2"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Opacity="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center" />
                        <Track
                            Name="PART_Track"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}">
                            <Track.Thumb>
                                <Thumb
                                    Style="{StaticResource YellowSliderThumbStyle}" />
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

