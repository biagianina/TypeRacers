<UserControl
    x:Class="TypeRacers.View.TimerReadyPopupCustomControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TypeRacers.View"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:Name="popup">

    <ContentControl.Template>
        <ControlTemplate
            TargetType="local:TimerReadyPopupCustomControl">
            <Grid
                Background="#7f000000">
                <Grid
                    Background="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <StackPanel
                        Margin="20">
                        <TextBlock
                            Text="{Binding Title, ElementName=popup}"
                            FontSize="20" />
                        <ContentPresenter />
                    </StackPanel>
                </Grid>
            </Grid>
        </ControlTemplate>
    </ContentControl.Template>
</UserControl>